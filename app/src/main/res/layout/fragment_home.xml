<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B3E5FC"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Tiêu đề -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Các thiết bị của tôi"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="24dp" />

        <!-- Thẻ thiết bị -->
        <!-- Thẻ thiết bị -->
        <include layout="@layout/living_room_card" android:id="@+id/LivingRoom" />
        <include layout="@layout/bedroom_card" android:id="@+id/BedRoom" />
        <include layout="@layout/device_card" android:id="@+id/Door" />
        <include layout="@layout/stair_card" android:id="@+id/Stair" />


    </LinearLayout>
</ScrollView>
